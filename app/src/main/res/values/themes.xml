<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UI" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">#FFFFFF</item>
    </style>

<!--    <style name="FullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">-->
<!--        <item name="android:windowFullscreen">true</item>-->
<!--    </style>-->

    <style name="login_editText">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@color/blue2</item>
        <item name="android:textColorHint">@color/blue2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="login_btn"> <!-- main -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@drawable/solid_button</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="upload_btn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/solid_button</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Join -->
    <style name="main_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Join, QR, tos -->
    <style name="sub_title"> <!-- Join, QR, tos -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:autoSizeMaxTextSize">13sp</item>
        <item name="android:autoSizeMinTextSize">12sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/darkGray</item>
    </style>

    <style name="inputBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/select_click_effect</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">22dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textColorHint">@color/darkGray</item>
    </style>

    <!-- Join -->
    <style name="btn_white"> <!-- Join -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/solid_button_black</item>
        <item name="android:elevation">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="join_textview"> <!-- Join -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="autoSizeMaxTextSize">13sp</item>
        <item name="autoSizeMinTextSize">13sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="join_office_inputBox"> <!-- Join -->
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textColorHint">@color/darkGray</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/select_click_effect</item>
        <item name="android:lines">1</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="join_conLayout"> <!-- Join -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="join_radioBtn"> <!-- Join -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="scrollView_manager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
    </style>
</resources>